@inherits LayoutComponentBase

@inject NavigationManager Navigation

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebar1Expanded = !sidebar1Expanded)" />
            <RadzenLabel Text="Centro de idiomas" @onclick="NavigateToHome" class="main-label" />
        </RadzenStack>
    </RadzenHeader>

    @if(!IsExternalView)
    {
        <RadzenSidebar @bind-Expanded="@sidebar1Expanded">

            <RadzenPanelMenu>
                <NavMenu />
            </RadzenPanelMenu>

        </RadzenSidebar>
    }

    <RadzenBody>
        <div class="rz-p-4">
            <ErrorBoundary>
                <ChildContent>
                    <CascadingValue Value="this">
                        @Body
                    </CascadingValue>
                </ChildContent>
                <ErrorContent Context="Error">
                    <p>Ocurrió un error</p>
                    <p>@Error.Message</p>
                    <p>@Error.InnerException</p>
                </ErrorContent>
            </ErrorBoundary>
        </div>
    </RadzenBody>

    @if(!IsExternalView)
    {
        <RadzenFooter>
            <RadzenLabel Text="Centro de idiomas - CECAR" />
        </RadzenFooter>
    }
</RadzenLayout>

@code {
    bool sidebar1Expanded = true;
    bool IsExternalView { get; set; }

    void NavigateToHome()
    {
        Navigation.NavigateTo("/");
    }

    public void SetExternalView(bool IsExternalView)
    {
        this.IsExternalView = IsExternalView;
        StateHasChanged();
    }
}